{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "vite",
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "build/**"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(favicon\\.ico|logo\\.svg|robots\\.txt)",
      "dest": "/client/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api/server.js"
    }
  ]
}
