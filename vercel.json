{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build:vercel",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "cleanUrls": true,
  "env": {
    "VITE_TMDB_API_KEY": "@vite_tmdb_api_key",
    "VITE_TMDB_ACCESS_TOKEN": "@vite_tmdb_access_token",
    "VITE_TMDB_ACCOUNT_ID": "@vite_tmdb_account_id"
  }
}
